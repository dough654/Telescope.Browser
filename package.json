{
  "name": "telescope-browser",
  "version": "1.0.1",
  "scripts": {
    "build": "tsc --noEmit && node ./esbuild.js",
    "postbuild": "cp -r src/public dist/ && cp manifest.json dist/",
    "build:firefox": "npm run build && cp manifest.firefix.json dist/manifest.json",
    "build:store": "npm run build && node scripts/build-store.js",
    "build:watch": "npx concurrently -c \"green,blue\" -n \"tsc,esbuild\" \"tsc --noEmit --watch --preserveWatchOutput\" \"node ./esbuild.js --watch\"",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:e2e": "npm run build && cypress run --browser chrome --config chromeWebSecurity=false",
    "test:e2e:open": "npm run build && cypress open --browser chrome",
    "test:unit": "vitest",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^4.5.10",
    "@neoconfetti/svelte": "^1.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/chrome": "^0.0.308",
    "@types/eslint": "8.56.0",
    "@types/loglevel": "^1.5.4",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "cypress": "^14.5.2",
    "esbuild": "^0.25.0",
    "esbuild-svelte": "^0.9.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.20",
    "svelte-check": "^3.6.0",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "dependencies": {
    "fuse.js": "^7.1.0",
    "loglevel": "^1.9.2"
  }
}
